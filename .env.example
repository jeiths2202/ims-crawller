# IMS Configuration
IMS_BASE_URL=https://your-ims-system.com
IMS_USERNAME=your_username
IMS_PASSWORD=your_password

# Cookie-based Authentication (Optional - bypasses login form)
# Set this to use browser cookies instead of username/password login
# Run 'python export_cookies.py' to generate cookies.json
COOKIE_FILE=cookies.json

# Crawler Settings
MAX_CONCURRENT_REQUESTS=5
DEFAULT_MAX_RESULTS=100
DOWNLOAD_ATTACHMENTS=true

# Output Settings
OUTPUT_DIR=data/issues
ATTACHMENTS_DIR=data/attachments

# LLM Settings (Phase 3 - Optional)
# Enable local LLM fallback for complex queries with low confidence
# Requires Ollama installed and running: https://ollama.com
USE_LLM=false
LLM_MODEL=gemma:2b
LLM_BASE_URL=http://localhost:11434
LLM_TIMEOUT=10
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=50

# PostgreSQL Database Settings
# Enable database storage for crawl metadata and analytics
# Requires PostgreSQL 16+ running (see database/README.md)
USE_DATABASE=false
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ims_crawler
DATABASE_USER=ims_user
DATABASE_PASSWORD=your_password_here
DATABASE_SCHEMA=ims

# Database Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Database Performance Settings (for debugging)
DATABASE_ECHO=false
DATABASE_ECHO_POOL=false
